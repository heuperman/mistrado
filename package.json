{
	"name": "mistral-cli",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@mistralai/mistralai": "^1.7.1",
		"@modelcontextprotocol/sdk": "^1.12.1",
		"diff": "^8.0.2",
		"glob": "^11.0.2",
		"ink": "^5.2.1",
		"ink-text-input": "^6.0.0",
		"keytar": "^7.9.0",
		"meow": "^13.2.0",
		"minimatch": "^10.0.1",
		"react": "^18.3.1",
		"zod-to-json-schema": "^3.24.5"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^7.0.0",
		"@types/diff": "^7.0.2",
		"@types/minimatch": "^5.1.2",
		"@types/node": "^22.15.30",
		"@types/react": "^18.3.1",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.3.0",
		"chalk": "^5.4.1",
		"eslint-config-xo-react": "^0.28.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"ink-testing-library": "^4.0.0",
		"prettier": "^3.5.3",
		"ts-node": "^10.9.1",
		"tsimp": "^2.0.12",
		"typescript": "^5.8.3",
		"xo": "^1.0.0"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--import=tsimp"
		]
	},
	"xo": {
		"react": true,
		"prettier": true,
		"semicolon": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
